<?xml version="1.0" encoding="UTF-8"?>
<project name="hw5" default="all">
  
  
  <property file="hw5_java.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8.0_111" value="${jdk.home.1.8.0_111}/bin"/>
  <path id="jdk.classpath.1.8.0_111">
    <fileset dir="${jdk.home.1.8.0_111}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8.0_111}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8.0_111}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8.0_111"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module hw5_Java -->
  
  <dirname property="module.hw5_java.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.hw5_java" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.hw5_java" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.hw5_java" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.hw5_java" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="hw5_java.output.dir" value="${module.hw5_java.basedir}/out/production/hw5_Java"/>
  <property name="hw5_java.testoutput.dir" value="${module.hw5_java.basedir}/out/test/hw5_Java"/>
  
  <path id="hw5_java.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hw5_java.module.production.classpath">
    <path refid="${module.jdk.classpath.hw5_java}"/>
  </path>
  
  <path id="hw5_java.runtime.production.module.classpath">
    <pathelement location="${hw5_java.output.dir}"/>
  </path>
  
  <path id="hw5_java.module.classpath">
    <path refid="${module.jdk.classpath.hw5_java}"/>
    <pathelement location="${hw5_java.output.dir}"/>
  </path>
  
  <path id="hw5_java.runtime.module.classpath">
    <pathelement location="${hw5_java.testoutput.dir}"/>
    <pathelement location="${hw5_java.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.hw5_java">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hw5_java">
    <patternset refid="excluded.from.module.hw5_java"/>
  </patternset>
  
  <path id="hw5_java.module.sourcepath">
    <dirset dir="${module.hw5_java.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.hw5_java" depends="compile.module.hw5_java.production,compile.module.hw5_java.tests" description="Compile module hw5_Java"/>
  
  <target name="compile.module.hw5_java.production" depends="register.custom.compilers" description="Compile module hw5_Java; production classes">
    <mkdir dir="${hw5_java.output.dir}"/>
    <javac2 destdir="${hw5_java.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.hw5_java}/javac">
      <compilerarg line="${compiler.args.hw5_java}"/>
      <bootclasspath refid="hw5_java.module.bootclasspath"/>
      <classpath refid="hw5_java.module.production.classpath"/>
      <src refid="hw5_java.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.hw5_java"/>
    </javac2>
    
    <copy todir="${hw5_java.output.dir}">
      <fileset dir="${module.hw5_java.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.hw5_java.tests" depends="register.custom.compilers,compile.module.hw5_java.production" description="compile module hw5_Java; test classes" unless="skip.tests"/>
  
  <target name="clean.module.hw5_java" description="cleanup module">
    <delete dir="${hw5_java.output.dir}"/>
    <delete dir="${hw5_java.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.hw5_java" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.hw5_java" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>